# Database
MONGODB_URI=mongodb://localhost:27017/jackson-app

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Server
PORT=4001
NODE_ENV=development

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:4001/api/auth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_CALLBACK_URL=http://localhost:4001/api/auth/facebook/callback

# Twilio (SMS/OTP)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Redis
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# VIP System
VIP_BRONZE_PRICE=4.99
VIP_GOLD_PRICE=9.99
VIP_PLATINUM_PRICE=19.99

# Cash Coach
MIN_WITHDRAWAL_AMOUNT=20
MAX_WITHDRAWAL_AMOUNT=100

# XP System
XP_DECAY_DAYS=7
XP_DECAY_PERCENT=0.25 