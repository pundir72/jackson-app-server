{
  "info": {
    "name": "Game API Collection",
    "description": "Complete collection for testing all Game API endpoints in the rewards backend system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "YOUR_JWT_TOKEN_HERE",
      "type": "string"
    },
    {
      "key": "gameId",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Game Listing",
      "item": [
        {
          "name": "Get All Games",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/games?page=1&limit=10&category=puzzle&difficulty=medium&featured=false&new=true&vipOnly=false",
              "host": ["{{baseUrl}}"],
              "path": ["games"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "category",
                  "value": "puzzle"
                },
                {
                  "key": "difficulty",
                  "value": "medium"
                },
                {
                  "key": "featured",
                  "value": "false"
                },
                {
                  "key": "new",
                  "value": "true"
                },
                {
                  "key": "vipOnly",
                  "value": "false"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Featured Games",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
