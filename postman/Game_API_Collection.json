  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Pre-request script to set up common headers and variables",
          "pm.request.headers.add({",
          "    key: 'Accept',",
          "    value: 'application/json'",
          "});",
          "",
          "// Set default timeout",
          "pm.request.timeout = 10000;"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Test script to validate responses",
          "pm.test('Status code is 200 or 201', function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
          "});",
          "",
          "pm.test('Response has success property', function () {",
          "    const jsonData = pm.response.json();",
          "    pm.expect(jsonData).to.have.property('success');",
          "});",
          "",
          "pm.test('Response has message property', function () {",
          "    const jsonData = pm.response.json();",
          "    pm.expect(jsonData).to.have.property('message');",
          "});",
          "",
          "pm.test('Response has statusCode property', function () {",
          "    const jsonData = pm.response.json();",
          "    pm.expect(jsonData).to.have.property('statusCode');",
          "});",
          "",
          "// Store gameId from response if available",
          "if (pm.response.code === 200 || pm.response.code === 201) {",
          "    const jsonData = pm.response.json();",
          "    if (jsonData.data && jsonData.data.game && jsonData.data.game._id) {",
          "        pm.collectionVariables.set('gameId', jsonData.data.game._id);",
          "    }",
          "}"
        ]
      }
    }
  ]
} 