    {
      "name": "Game Details",
      "item": [
        {
          "name": "Get Game by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/games/{{gameId}}",
              "host": ["{{baseUrl}}"],
              "path": ["games", "{{gameId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Play Game",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"location\": {\n    \"latitude\": 40.7128,\n    \"longitude\": -74.0060\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/games/{{gameId}}/play",
