{
  "info": {"name": "Games API Collection", "description": "Games endpoints including listing, details, progress, and admin operations", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"},
  "variable": [{"key": "baseUrl", "value": "http://localhost:3000/api/v1", "type": "string"}, {"key": "authToken", "value": "", "type": "string"}, {"key": "gameId", "value": "", "type": "string"}],
  "auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{authToken}}", "type": "string"}]},
  "item": [
    {"name": "Get All Games","request": {"method": "GET","url": {"raw": "{{baseUrl}}/games?page=1&limit=10","host": ["{{baseUrl}}"],"path": ["games"],"query": [{"key": "page","value": "1"},{"key": "limit","value": "10"}]}}},
    {"name": "Get Featured Games","request": {"method": "GET","url": {"raw": "{{baseUrl}}/games/featured","host": ["{{baseUrl}}"],"path": ["games","featured"]}}},
    {"name": "Get New Games","request": {"method": "GET","url": {"raw": "{{baseUrl}}/games/new","host": ["{{baseUrl}}"],"path": ["games","new"]}}},
    {"name": "Get Popular Games","request": {"method": "GET","url": {"raw": "{{baseUrl}}/games/popular","host": ["{{baseUrl}}"],"path": ["games","popular"]}}},
    {"name": "Get Top Rated Games","request": {"method": "GET","url": {"raw": "{{baseUrl}}/games/top-rated","host": ["{{baseUrl}}"],"path": ["games","top-rated"]}}},
    {"name": "Get Games by Tags","request": {"method": "GET","url": {"raw": "{{baseUrl}}/games/tags?tags=puzzle&limit=10","host": ["{{baseUrl}}"],"path": ["games","tags"],"query": [{"key": "tags","value": "puzzle"},{"key": "limit","value": "10"}]}}},
    {"name": "Get Location-Based Games","request": {"method": "GET","url": {"raw": "{{baseUrl}}/games/location-based","host": ["{{baseUrl}}"],"path": ["games","location-based"]}}},
    {"name": "Get VIP Games","request": {"method": "GET","url": {"raw": "{{baseUrl}}/games/vip","host": ["{{baseUrl}}"],"path": ["games","vip"]}}},
    {"name": "Get Game Categories","request": {"method": "GET","url": {"raw": "{{baseUrl}}/games/categories","host": ["{{baseUrl}}"],"path": ["games","categories"]}}},
    {"name": "Get Game Stats","request": {"method": "GET","url": {"raw": "{{baseUrl}}/games/stats","host": ["{{baseUrl}}"],"path": ["games","stats"]}}},

    {"name": "Get Game by ID","request": {"method": "GET","url": {"raw": "{{baseUrl}}/games/{{gameId}}","host": ["{{baseUrl}}"],"path": ["games","{{gameId}}"]}}},
    {"name": "Play Game","request": {"method": "POST","header": [{"key": "Content-Type","value": "application/json"}],"url": {"raw": "{{baseUrl}}/games/{{gameId}}/play","host": ["{{baseUrl}}"],"path": ["games","{{gameId}}","play"]},"body": {"mode": "raw","raw": "{\n  \"location\": {\n    \"latitude\": 40.7128,\n    \"longitude\": -74.0060\n  }\n}"}}},
    {"name": "Complete Game","request": {"method": "POST","header": [{"key": "Content-Type","value": "application/json"}],"url": {"raw": "{{baseUrl}}/games/{{gameId}}/complete","host": ["{{baseUrl}}"],"path": ["games","{{gameId}}","complete"]},"body": {"mode": "raw","raw": "{\n  \"score\": 1500,\n  \"timeSpent\": 300,\n  \"achievements\": [\"first_win\"]\n}"}}},
    {"name": "Rate Game","request": {"method": "POST","header": [{"key": "Content-Type","value": "application/json"}],"url": {"raw": "{{baseUrl}}/games/{{gameId}}/rate","host": ["{{baseUrl}}"],"path": ["games","{{gameId}}","rate"]},"body": {"mode": "raw","raw": "{\n  \"rating\": 4.5,\n  \"comment\": \"Great game!\"\n}"}}},

    {"name": "Get My Game Progress","request": {"method": "GET","url": {"raw": "{{baseUrl}}/games/progress","host": ["{{baseUrl}}"],"path": ["games","progress"]}}},
    {"name": "Get Game Progress by Game ID","request": {"method": "GET","url": {"raw": "{{baseUrl}}/games/progress/{{gameId}}","host": ["{{baseUrl}}"],"path": ["games","progress","{{gameId}}"]}}},
    {"name": "Get My Achievements","request": {"method": "GET","url": {"raw": "{{baseUrl}}/games/achievements","host": ["{{baseUrl}}"],"path": ["games","achievements"]}}},
    {"name": "Get Leaderboard","request": {"method": "GET","url": {"raw": "{{baseUrl}}/games/{{gameId}}/leaderboard?limit=10","host": ["{{baseUrl}}"],"path": ["games","{{gameId}}","leaderboard"],"query": [{"key": "limit","value": "10"}]}}},

    {"name": "Admin: Toggle Featured","request": {"method": "PATCH","url": {"raw": "{{baseUrl}}/games/{{gameId}}/toggle-featured","host": ["{{baseUrl}}"],"path": ["games","{{gameId}}","toggle-featured"]}}},
    {"name": "Admin: Toggle Active","request": {"method": "PATCH","url": {"raw": "{{baseUrl}}/games/{{gameId}}/toggle-active","host": ["{{baseUrl}}"],"path": ["games","{{gameId}}","toggle-active"]}}},
    {"name": "Admin: Add Tag","request": {"method": "POST","header": [{"key": "Content-Type","value": "application/json"}],"url": {"raw": "{{baseUrl}}/games/{{gameId}}/tags","host": ["{{baseUrl}}"],"path": ["games","{{gameId}}","tags"]},"body": {"mode": "raw","raw": "{\n  \"tag\": \"new-tag\"\n}"}}},
    {"name": "Admin: Remove Tag","request": {"method": "DELETE","url": {"raw": "{{baseUrl}}/games/{{gameId}}/tags/new-tag","host": ["{{baseUrl}}"],"path": ["games","{{gameId}}","tags","new-tag"]}}}
  ]
}